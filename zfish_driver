% Project for BME
clear, clc
% Read in .tif file
% read in with a for loop
% 396 frames in file
% input('File name', 's')
fname = 'Startle1.tif';
info = imfinfo(fname);
num_img = numel(info);
[n,m] = size(imread(fname,1));

zfishRe = zeros(m,n,num_img);

for k = 1:num_img
    
      zfishRe(:,:,k) = imread(fname, k);
      
end  

zfishRe = uint8(zfishRe);
zfishRe = imcomplement(zfishRe);



% Use a user defined function to go through pixel by pixel
% this function will define each pixel based on it relative coloring
% function name part_fil
zfishI = part_fil(zfishRe);

% for i = 1:size(zfishI,3) % Cycles through frames
%     imshow(zfishI(:,:,i));
% end
% function for zebra fish identity
SE=strel('square',6); % Defines square structuring object for dilation

dilated_im= imdilate(zfishI, SE); % Dilates image for fish continuity

zfish_iso=bwareaopen(dilated_im, 7); % Deletes stray pixel neighborhoods created during dilation

zfishRe = imcomplement(zfishRe); % Flips colormap of image to original so track plotting will be over original image
% zfish_track function will now track centroids of individual fish and plot over original image
zfish_track(zfish_iso,zfishRe)

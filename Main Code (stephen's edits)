%% Project for BME
clear, clc
% Read in .tif file
% read in with a for loop
% 396 frames in file
% input('File name', 's')

zfish = imfinfo('Startle1.tif'); % Reads in file info
zfish_frames = numel(zfish);

[n,m] = size(imread('Startle1.tif',1));
zfishRe = zeros(m,n,zfish_frames);

for k = 1:zfish_frames
    
      zfishRe(:,:,k) = imread('Startle1.tif', k);
      %zfishI(:,:,k) = imcomplement(zfishRe(:,:,k)); %inverts the image
      imshow(zfishRe(:,:,k))
      
end   

% Use a user defined function to go through pixel by pixel
% this function will define each pixel based on it relative coloring
% function name par_fil
zfish_fil = part_fil(zfishI)
% function for zebra fish identity

identified_im = identify(zfish_fil); % function for identifying zebrafish objects

zfish_track(identified_im) % function to track and plot paths of zebrafish
